{% extends "base.twig" %}

{% block content %}
	

	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<div class='card-big'>
				<section class="article-content">
					<h2>{{post.title}}</h2>

					<p class="blog-author">
						{{ post.post_date|date}}
					</p>
					{% if post.thumbnail.src %}
						<img class='thumbnail-single' src="{{post.thumbnail.src}}" />
					{% endif %}

					<div class="article-body">
						<p><small>{{post.content}}</small></p>
					</div>				
				</section>	
				<section class="comments">
					<div class="respond">
						<h3 class="h2">Comments</h3>
						{{ comment_form }}
					</div>

				</section>
			</div>
	</article>
	<!-- /content-wrapper -->

{% endblock %}
